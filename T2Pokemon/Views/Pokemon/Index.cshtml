@{ var poke = ((List<Pokemon>)Model); }

@if (User.Claims.FirstOrDefault() != null)
{
<body>
    <header>
        <div class="container">
            <h1 class="h-100 badge badge-dark">Usuario: @User.Claims.FirstOrDefault().Value</h1>
        </div>
    </header>
</body>
}


<h1>Lista de Pokemones</h1>

<a href="/pokemon/registrar">Registrar Pokemon</a>

<form class="form-inline">
    <input class="form-control mr-sm-2 my-sm-0" type="search" placeholder="Buscar" name="search" value="@ViewBag.Buscar">
    <button class="btn btn-outline-success my-2" type="submit">Buscar</button>
</form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in poke)
        {
            <tr>
                <td>
                    <a href="/pokemon/eliminar?id=@item.Id">
                        <img src="@item.Imagen" width="50" alt="Alternate Text" />
                    </a>
                </td>
                <td>@item.Nombre</td>
                <td>@item.Elementos.Nombre</td>
                <td>
                    @if (User.Claims.FirstOrDefault() != null)
                    {
                        <a href="/pokemon/editar?id=@item.Id">Capturar</a>
                        <a href="/pokemon/editar?id=@item.Id">Editar</a>
                        <a href="/pokemon/eliminar?id=@item.Id">Eliminar</a>
                    }
</td>
            </tr>
            }
    </tbody>
</table>
