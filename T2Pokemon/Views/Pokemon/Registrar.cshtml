@{ var poke = (Pokemon)Model; }

<body>
    <header>
            <div class="container">
                <h1 class="h-100 badge badge-dark">Usuario: @User.Claims.FirstOrDefault().Value</h1>
            </div>
        </header>
</body>

<h1>Capturar Pokemon</h1>
<div class="row">
    <div class="col-6">
        <form action="/pokemon/registrar" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label>Imagen</label>
            </div>
            <div class="form-group">
                <input type="file" name="image" />
                @Html.ValidationMessage("Imagen")
            </div>

            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" name="nombre" />
                @Html.ValidationMessage("Nombre")
                @Html.ValidationMessage("Nom")
            </div>

            <div class="form-group">
                <label>Elemento</label>
                <select name="IdTipo" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in ViewBag.Elementos)
                    {
                     <option value="@item.Id">@item.Nombre</option>}
                </select>
                @Html.ValidationMessage("IdTipo")
            </div>

            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
