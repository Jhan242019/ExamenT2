@{ var poke = (Pokemon)Model; }

<body>
    <header>
            <div class="container">
                <h1 class="h-100 badge badge-dark">Usuario: @User.Claims.FirstOrDefault().Value</h1>
            </div>
        </header>
</body>

<h1>Capturar Pokemon</h1>
<div class="row">
    <div class="col-6">
        <form action="/pokemon/editar" enctype="multipart/form-data" method="post">

            <input type="hidden" name="Id" value="@poke.Id" />

            <div class="form-group">
                <label>Imagen</label>
            </div>
            <div class="form-group">
                <input type="file" name="image" value="@poke.Imagen" />
                @Html.ValidationMessage("Imagen")
            </div>

            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" name="Nombre" value="@poke.Nombre"/>
                @Html.ValidationMessage("Nombre")
            </div>

            <div class="form-group">
                <label>Elemento</label>
                <select name="IdTipo" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in ViewBag.Elementos)
                    {
                        @if (poke.Elementos == item)
                        {
                            <option value="@item.Id" selected>@item.Nombre</option> }
                        else
                            {
                        <option value="@item.Id">@item.Nombre</option>
                        }
                    }
                 </select>
            </div>

            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
